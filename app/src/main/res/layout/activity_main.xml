<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical"
        android:background="#80ff00">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
    android:layout_gravity="center_horizontal"
    android:id="@+id/imgLogin"
    android:src="@drawable/ic_launcher_background"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableRight="@drawable/email"
            android:hint="Please enter your email..."
            android:ems="10"
            android:inputType="textEmailAddress"
            android:textColor="#fff"
            android:id="@+id/activity_main_edtEmail"
    />

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/password"
            android:hint="Please enter a password..."
            android:ems="10"
            android:textColor="#fff"
            android:layout_marginTop="10dp"
            android:id="@+id/activity_main_edtPassword"
            android:inputType="textPassword"
    />
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="login"
            android:background="#ffff00"
            android:textSize="30sp"
            android:layout_marginTop="10dp"
            android:id="@+id/activity_main_btnLogin"
    />

    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="sign up page"
            android:background="#ff0000"
            android:textColor="#fff"
            android:textSize="30sp"
            android:layout_marginTop="10dp"
            android:id="@+id/activity_main_btnSignUp"
    />


</LinearLayout>