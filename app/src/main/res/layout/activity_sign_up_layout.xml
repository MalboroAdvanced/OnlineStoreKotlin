<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignUpLayout"
android:orientation="vertical"
android:background="#0000ff">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp" app:srcCompat="@mipmap/ic_launcher_round" android:id="@+id/imageView"
            android:scaleType="fitXY"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/signup_layout_edtEmail"
            android:hint="please enter your email..."
            android:drawableRight="@drawable/email"
            android:background="#ff1155"
            android:textSize="24sp"
            android:layout_marginTop="10dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/signup_layout_edtUsername"
            android:hint="please enter your username..."
            android:drawableRight="@drawable/username"
            android:background="#ff1155"
            android:textSize="24sp"
            android:layout_marginTop="10dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/signup_layout_edtPassword"

            android:hint="please enter your password..."
            android:drawableRight="@drawable/password"
            android:background="#ff1155"
            android:textSize="24sp"
            android:layout_marginTop="10dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/signup_layout_edtPasswordConfirm"
            android:hint="please confirm your password..."
            android:drawableRight="@drawable/confirm"
            android:background="#ff1155"
            android:textSize="24sp"
            android:layout_marginTop="10dp"/>
    <Button
            android:text="sign up"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/signup_layout_btnSignup"
            android:background="#AA22DD"/>
    <Button
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/signup_layout_btnLogin"
            android:text="login page"
            android:background="#AA22DD"/>
</LinearLayout>